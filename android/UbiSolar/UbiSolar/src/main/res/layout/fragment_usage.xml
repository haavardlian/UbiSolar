<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"-->

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/fragment_usage_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        app:pstsShouldExpand="true" />

    <com.sintef_energy.ubisolar.utils.ScrollViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_usage_tabs_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_usage_tabs" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/usage_segment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/usage_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/usage_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/usage_weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weeks"
                style="@style/RadioButton" />
            <RadioButton
                android:id="@+id/usage_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Months"
                style="@style/RadioButton" />
        </info.hoang8f.android.segmented.SegmentedGroup>
    </LinearLayout>
</RelativeLayout>