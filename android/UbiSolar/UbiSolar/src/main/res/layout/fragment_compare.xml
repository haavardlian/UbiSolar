<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:paddingLeft="0dp" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >



        <TextView
            android:id="@+id/userHeader"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="@string/user_name" />



        <TextView
            android:id="@+id/friendHeader"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="@string/friend_name" />



    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/userProfilePic"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:layout_weight="2"
            android:layout_centerInParent="true"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/vs_icon"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/power_production" />


    <ImageView
            android:id="@+id/friendProfilePic"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:src="@drawable/profile"  />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="5dp" >

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/compFriendChart"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="100dp"
                android:src="@drawable/graph" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_gravity="center_horizontal|top"
                android:padding="12dp"
                android:textStyle="bold"
                android:text="@string/comp_header"
                />

        </FrameLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/wattLvl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="410dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:text="@string/watt_lvl"
        />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="fill_parent"
        android:layout_marginTop="455dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_height="1dp"
        android:gravity="center"
        android:background="#000"
        android:layout_below="@+id/wattLvl"/>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >



        <TextView
            android:id="@+id/userWattLvl"
            android:layout_below="@+id/horizontalLine"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="470dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_centerInParent="true"
            android:text="@string/user_watt_lvl" />



        <TextView
            android:id="@+id/friendWattLvl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="470dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_below="@+id/horizontalLine"
            android:layout_centerInParent="true"
            android:text="@string/friend_watt_lvl" />



    </LinearLayout>

    </RelativeLayout>