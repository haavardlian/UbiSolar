<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/residence_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:layout_row="0"
        android:src="@drawable/home" />

    <GridLayout>
        android:layout_row="1"
        android:layout_column="1">

        <TextView
            android:id="@+id/residence_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:enabled="false"
            android:paddingLeft="25dp"
            android:text="Name" />

        <TextView
            android:id="@+id/residence_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/residence_name"
            android:layout_column="1"
            android:layout_marginTop="8dp"
            android:layout_row="1"
            android:paddingLeft="25dp"
            android:text="description" />

        <TextView
            android:id="@+id/residence_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="8dp"
            android:layout_row="2"
            android:paddingLeft="25dp"
            android:text="area" />

        <TextView
            android:id="@+id/residence_residents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="8dp"
            android:layout_row="3"
            android:paddingLeft="25dp"
            android:text="residents" />

    </GridLayout>
</GridLayout>